<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#822"
    android:padding="10dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/runnersworld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#722"
        android:text="Running Group" />

    <Button
        android:id="@+id/myrunnersfriends"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#722"
        android:text="My Friends" />

    <Button
        android:id="@+id/runnerConversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"

        android:background="#722"
        android:text="Message List" />

    <Button
        android:id="@+id/farest"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#722"
        android:text="Ranking List" />


</LinearLayout>